{
    "defaultSeverity": "error",
    "extends": ["tslint:recommended"],
    "jsRules": {},
    "rules": {
        "trailing-comma": [
            true,
            {
                "singleline": "never",
                "multiline": {
                    "objects": "always",
                    "arrays": "always",
                    "functions": "never",
                    "typeLiterals": "ignore"
                }
            }
        ],
        "no-console": false,
        "max-line-length": [
            true,
            {
                "limit": 80,
                "check-strings": true,
                "check-regex": true
            }
        ]
    },
    "rulesDirectory": [],
    "indent": [true, "spaces", 4]
}
